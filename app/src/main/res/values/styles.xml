<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:windowBackground">@color/accent</item>
	</style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
		<item name="colorAccent">@color/primary</item>
		<item name="android:textColorPrimary">@color/jumbo</item>
		<item name="android:colorBackground">@android:color/white</item>
	</style>


	<style name="AppTheme.Button" parent="Theme.AppCompat.NoActionBar">
		<item name="android:textColorHint">@color/primary</item>
		<item name="colorControlNormal">@color/iron</item>
		<item name="colorControlActivated">@color/white</item>

		<item name="colorButtonNormal">@color/primary_dark</item>
	</style>

	<style name="AppTheme.EditText" parent="Theme.AppCompat.NoActionBar">
		<item name="colorControlNormal">@color/primary</item>
		<item name="colorControlActivated">@color/primary</item>
		<item name="colorControlHighlight">@color/primary_dark</item>
	</style>

	<style name="TextLabel" parent="TextAppearance.AppCompat">
		<item name="android:textColorHint">@color/primary</item>
		<item name="colorAccent">@color/aluminum</item>
	</style>

</resources>